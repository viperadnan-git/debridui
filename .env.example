# ==========================================
# Environment Configuration
# ==========================================
# Note: Variables that are commented out (prefixed with #) are optional.
# Uncomment and set them only if you need those features.

# ==========================================
# External Services
# ==========================================

# Trakt.tv client ID for media discovery
NEXT_PUBLIC_TRAKT_CLIENT_ID=""

# CORS proxy URL for external API requests
NEXT_PUBLIC_CORS_PROXY_URL=""

# Optional: Discord community invite URL
# NEXT_PUBLIC_DISCORD_URL=""

# Optional: Analytics script URL
# NEXT_PUBLIC_ANALYTICS_SCRIPT=""

# ==========================================
# Database Configuration
# ==========================================

# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://user:password@localhost:5432/debridui"

# ==========================================
# Authentication (Better Auth)
# ==========================================

# Secret key for Better Auth (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET=""

# Application URL
# Development: http://localhost:3000
# Production: set to your actual domain (e.g., https://yourdomain.com)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ==========================================
# OAuth Providers
# ==========================================

# Google OAuth configuration (optional)
# Get credentials from: https://console.cloud.google.com/apis/credentials
# Client ID is public and used in OAuth flows
# NEXT_PUBLIC_GOOGLE_CLIENT_ID=""

# Client secret is server-side only
# GOOGLE_CLIENT_SECRET=""

# ==========================================
# Feature Flags
# ==========================================

# Disable email/password signup (login will still work)
# Set to "true" to disable, leave empty or "false" to enable
# NEXT_PUBLIC_DISABLE_EMAIL_SIGNUP="false"
